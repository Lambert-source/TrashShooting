using UnityEngine;
using UnityEngine.SceneManagement;

public class SceneController : MonoBehaviour
{
    public static SceneController Instance;

    private void Awake()
    {
        if (Instance == null)
        {
            Instance = this;
            DontDestroyOnLoad(gameObject);
        }
        else
        {
            Destroy(gameObject);
        }
    }

    public void LoadTitle()
    {
        SceneManager.LoadScene("TitleScene");
    }

    public void LoadStage1()
    {
        SceneManager.LoadScene("Stage1");
    }

    public void LoadStage2()
    {
        SceneManager.LoadScene("Stage2");
    }

    public void LoadStage3()
    {
        SceneManager.LoadScene("Stage3");
    }

    public void LoadNextStage()
    {
        string currentScene = SceneManager.GetActiveScene().name;
        if (currentScene == "Stage1")
            SceneManager.LoadScene("ResultClearStage1");
        else if (currentScene == "Stage2")
            SceneManager.LoadScene("ResultClearStage2");
        else if (currentScene == "Stage3")
            SceneManager.LoadScene("ResultClearFinal");
    }

    public void LoadGameOver()
    {
        SceneManager.LoadScene("ResultGameOver");
    }

    public void RestartStage()
    {
        string currentScene = SceneManager.GetActiveScene().name;
        SceneManager.LoadScene(currentScene);
    }

    public void QuitGame()
    {
        Application.Quit();
    }
}
